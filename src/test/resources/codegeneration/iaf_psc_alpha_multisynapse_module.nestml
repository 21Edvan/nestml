  internal:
    h   ms   = resolution()
    P11_syn real<num_of_receptors> = -h / tau_syn
    P21_syn real<num_of_receptors> = Tau/(C*(1.0-Tau/tau_syn)) * P11_syn * (1.0 - exp(h*(1.0/tau_syn-1.0/Tau)));
