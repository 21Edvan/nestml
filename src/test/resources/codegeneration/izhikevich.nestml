neuron izhikevich_nestml:

  state:
    V_m mV = -65mv
    u real
    I_syn mV = 0
  end

  equations:
    V_m' = 0.04 * V_m*V_m + 5.0 * V_m + 140 - u + I_e + I_syn
    u' = a*(b*V_m-u)
  end

  parameter:
    a real = 0.02
    b real = 0.2
    c mV = -65
    d real = 8.0
  end

  internal:
    I_e mA = 0mA
  end

  input:
    spikes   <- spike
    currents <- current
  end

  output: spike

  update:
    I_syn = spikes.getSum()
    integrate(V_m)
    if V_m >= 30:
      V_m = c
      u += d
      emit_spike()
    end
  end

end