/*
  A straight forward implementation of the RC circuit approach
*/
neuron iaf:

  state:
    V_abs mV = 0mV
    alias V_m mV = V_abs - E_L
    I_syn pA = 0pA
  end

  equations:
      V_abs' = -1/tau_m * V_abs + 1/C_m*I_syn
  end

  parameter:
    E_L   mV = -65mV
    C_m   pF = 250pF
    tau_m ms = 10ms
  end

  input:
    spikes   <- spike
  end

  output: spike

  update:
    integrate(V_abs)
    I_syn = spikes.get_sum()
  end

end