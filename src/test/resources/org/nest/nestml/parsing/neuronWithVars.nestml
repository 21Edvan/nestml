package org.nest.nestml.parsing.neuronWithVars:

    neuron VarsNeuron:
        state:
            vM mV
            x mV
            abc mm
        end
        
        parameter:
            radius mm = 5
            alias diameter mm = 2 * radius
        end
        
        internal:
            y, z real = 0
        end
        
        dynamics timestep(t ms):
        end
        
        function set_diameter(v mm):
            radius = v / 2
        end

        input:
          spikeBuffer   <- inhibitory excitatory spike
          currentBuffer <- current
        end

        output: spike
    end
    
end
